[generator_torrid]:zone_base
GroupControlSection			= spawn_group_zone
$spawn						= "zones\generator\generator_torrid"
;$prefetch 					= 8
class						= Z_TORRID
hit_impulse_scale			=   0
effective_radius			= 2.75 ;размер радиуса в процентах от оригинального, где действует зона
postprocess					= postprocess_flame

ef_anomaly_type				= 1
ef_weapon_type				= 13

artefacts		=
BirthProbability = 0.0

;----------- Anomaly settings -----------------------
min_start_power		= 0.99
max_start_power		= 1.00
attenuation			= 1
period				= 1
min_artefact_count	= 0
max_artefact_count	= 0

idle_particles				= generator\anomaly_gen_dust
blowout_particles			= generator\anomaly_gen_dust

hit_small_particles	    	= generator\anomaly_gen_dust
hit_big_particles			= generator\anomaly_gen_dust
idle_small_particles		= generator\anomaly_gen_dust
idle_big_particles			= generator\anomaly_gen_dust

idle_particles_dont_stop	= true;

idle_sound					= anomaly\gen_electra_ball_idle ;anomaly\fireball_idle		;постоянный звук
blowout_sound				= anomaly\fireball_blow ;ambient\silence	   	;во время выброса(удара) в центре аномалии
hit_sound					= ambient\fire2; ambient\silence				;на персонаже, когда тот получает хит
entrance_sound				= ambient\fire2; ambient\silence				;при попадании объекта в аномалию

hit_type					= burn

disable_time		= 0	;время игнорирования неживого объекта в зоне (-1 если не нужно)
disable_time_small	= 0	;время игнорирования маленького неживого объекта в зоне (-1 если не нужно)
disable_idle_time	= 50000	;время отключения idle партиклов

ignore_nonalive		= true
ignore_small		= true
ignore_artefacts	= true

blowout_light		= on
light_color		    = 0.8,0.9,1
light_range		    = 30.0
light_time 		    = 1
light_height		= 0.0			;подъем источника света на высоту


idle_light			= on
idle_light_range	= 30.0
idle_light_range_delta = 0.2
idle_light_anim		= levels\generator\ball_lightning_light
idle_light_height	= 0.0			;подъем источника света на высоту

awaking_time		= 100
blowout_time		= 100
accamulate_time		= 100

visible_by_detector = off

blowout_wind		= off

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
;рождение артефактов во время срабатывания
spawn_blowout_artefacts = off


