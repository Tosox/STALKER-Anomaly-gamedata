[logic]
active = ph_door@close

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = {!is_actor_enemy_to_faction(stalker)} ph_door@close ;--new line added, to prevent the possibility of door from staying locked once actor somehow become good with loners 

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = {!is_actor_enemy_to_faction(stalker)} ph_door@open, ph_door@locked

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_info = {=actor_out_zone(red_forester_restr)} ph_door@close
on_use = ph_door@close

[ph_door@free]
locked = false
closed = true
no_force = true
on_use = ph_door@open