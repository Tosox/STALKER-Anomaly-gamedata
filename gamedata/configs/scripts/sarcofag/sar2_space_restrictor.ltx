[logic]
active = sr_idle

[sr_idle]
on_info = {+sar2_teleport_start} sr_idle@call

[sr_idle@call]
on_info = %=play_sound(sar2_monolith_call)%
on_info2 = {+sar2_monolith_end} sr_idle@dying %=aes_earthshake%

[sr_idle@dying]
on_info = %=play_sound(mon_organic_moan)%
on_signal = sound_end | sr_idle@destroy

[sr_idle@destroy]
on_info = %=destroy_object(story:sar_monolith) =play_sound(mon_explosion) =turn_off(lights_gi_r2_0000) =turn_off(lights_gi_r2_0029) =disable_monolith_zones%
on_signal = sound_end | sr_idle@nil

[sr_idle@nil]