[sr_idle@three]
on_info = {=counter_equal(lx8_documents:3)} sr_idle@four %+lx8_doc_3%

[sr_idle@four]
on_info = {=counter_equal(lx8_documents:4)} sr_idle@five %+lx8_doc_4%

[sr_idle@five]
on_info = {=counter_equal(lx8_documents:5)} sr_idle@six %+lx8_doc_5%

[sr_idle@six]
