#include "common.h"
#include "sload.h"

struct 	p_particle
{
	p_flat	base	;
	float4 	color	: COLOR0;
};

f_deffer 	main	( p_particle II )
{
  f_deffer	O;
  p_flat	I;	I=II.base;

  // 1. Base texture + kill pixels with low alpha
  float4 	D 	= 	tex2D		(s_base, I.tcdh);
			D	*=	II.color;
			clip	(D.w-def_aref);

  // 2. Standart output
  O.Ne          = float4		(normalize((float3)I.N.xyz)					, I.position.w	);
  O.position    = float4 	(I.position.xyz + O.Ne.xyz*def_virtualh/2.h	, xmaterial		);
  O.C			= float4		(D.xyz,			def_gloss);		// OUT: rgb.gloss
  return O;
}
